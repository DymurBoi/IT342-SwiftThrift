<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".RegisterStep1"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/border"
        android:elevation="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        >


        <TextView
            android:id="@+id/textView_Step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1 of 6"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/textView_stepName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What's your name?"
            android:textColor="@color/black"
            android:textSize="20sp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textView_labelFname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginHorizontal="5dp"
            />

        <EditText
            android:id="@+id/editText_Fname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"

        >

        <TextView
            android:id="@+id/textView_labelLname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginHorizontal="5dp"
            />

        <EditText
            android:id="@+id/editText_Lname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="200dp" />
    <Button
        android:id="@+id/button_continue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>